server {
    listen       8080;
    server_name  ${SERVER_NAME};

    resolver 127.0.0.11 valid=5s;
    set $upstream app;

    location / {
        proxy_pass http://$upstream:8000;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }
}
